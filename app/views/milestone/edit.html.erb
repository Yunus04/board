    <!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= render 'layouts/navbar' %></br>
    <%= render 'layouts/sidebar1' %></br>

	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Milestone / <%= @milestones.name %> / Setting </li>
			</ol>
		</div><!--/.row-->
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						Info The Milestone		
						<span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span></div>
					<div class="panel-body">
						<div class="canvas-wrapper">
							<%= form_for @milestones, url: project_milestone_path, method: :patch do |m| %>
								<div class="form-group">
									<%= m.label :Name_Milestone %>
									<%= m.text_field :name, class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= m.label :Description %>
									<%= m.text_area :description, class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= m.label :Start_Date %>
									<%= m.date_field :start_date, class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= m.label :End_Date %>
									<%= m.date_field :end_date, class: 'form-control' %>
								</div>								
								<div class="form-group">
									<%= m.submit class: 'btn btn-primary' %> 
								</div>							
							<%end%>
						</div>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div>	<!--/.main-->	
</body>
</html>
