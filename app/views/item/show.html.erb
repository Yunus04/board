    <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= render 'layouts/navbar' %></br>
    <%= render 'layouts/sidebar1' %></br>
    <%= stylesheet_link_tag "item" %>
    <!--Custom Font-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="#">
                    <em class="fa fa-home"></em>
                </a></li>
                <li class="active">Milestone  / <%= @milestones.name %> </li>
            </ol>
        </div>
        <div class="panel-body">
                        <div class="canvas-wrapper">                
                           <div class="row">
                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                             <center><h5>Requirement</h5></center>
                                        </div>
                                         <% @requirement.each do |r| %>
                                        <div class="ibox-content">
                                            <%= link_to r.task.name, project_task_path(@project) %></br>
                                            <%= link_to 'Forward', move_analys_path(@project, r), class: 'btn btn-primary'  %> </br>
                                            <%= link_to 'Delete', project_item_path(@project, r), method: :delete, data: {confirm: 'Apakah yakin ingin menghapus data ini ?'}, class: 'btn btn-warning' %>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>

                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                            <center><h5>Analysis Or Design</h5></center>
                                        </div>
                                         <% @analysis.each do |a| %>
                                        <div class="ibox-content">
                                            <%= link_to a.task.name, project_task_path(@project) %> </br>
                                            <%= link_to 'Back', back_requirement_path(@project, a)  %>|<%= link_to 'Forward', worked_move_path(@project, a)  %>
                                              <%= link_to 'Delete', project_item_path(@project, a), method: :delete, data: {confirm: 'Apakah yakin ingin menghapus data ini ?'}, class: 'btn btn-warning' %>
                                        </div>
                                        <%end %>
                                    </div>
                                </div>

                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                            <center><h5>Requirement Or Worked</h5></center>
                                        </div>
                                        <% @worked.each do |w| %>
                                        <div class="ibox-content">
                                            <%= link_to w.task.name, project_task_path(@project) %></br>
                                            <%= link_to 'Back', back_analysis_path(@project, w)  %>|<%= link_to 'Forward', inp_move_path(@project, w)  %>
                                             <%= link_to 'Delete', project_item_path(@project, w), method: :delete, data: {confirm: 'Apakah yakin ingin menghapus data ini ?'}, class: 'btn btn-warning' %>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>

                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                            <center><h5>Inp</h5></center>
                                        </div>
                                        <% @inp.each do |i|%>
                                        <div class="ibox-content">
                                            <%= link_to  i.task.name, project_task_path(@project) %></br>
                                            <%= link_to 'Back',  worked_back_path(@project, i)  %>|<%= link_to 'Forward', deploy_move_path(@project, i)  %>
                                             <%= link_to 'Delete', project_item_path(@project, i), method: :delete, data: {confirm: 'Apakah yakin ingin menghapus data ini ?'}, class: 'btn btn-warning' %>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>


                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                            <center><h5>Testing Or Deploy</h5></center>
                                        </div>
                                        <% @testing.each do |t|%>
                                        <div class="ibox-content">
                                            <%= link_to t.task.name, project_task_path(@project) %></br>
                                            <%= link_to 'Back',  inp_back_path(@project, t)  %>|<%= link_to 'Forward', completed_move_path(@project, t)  %>
                                             <%= link_to 'Delete', project_item_path(@project, t), method: :delete, data: {confirm: 'Apakah yakin ingin menghapus data ini ?'}, class: 'btn btn-warning' %>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>

                                <div class="col-md-2 padding-md">
                                    <div class="ibox">
                                        <div class="ibox-title">
                                            <center><h5>Completed</h5></center>
                                        </div>
                                        <% @completed.each do |c|%>
                                        <div class="ibox-content">
                                            <%= c.task.name %>
                                        </div>
                                         <% end %>
                                    </div>
                                </div>
                </div>                           
            </div>
        </div>
    </div>
</body>
</html>    