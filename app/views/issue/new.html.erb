<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= render 'layouts/navbar' %></br>
    <%= render 'layouts/sidebar1' %></br>

	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

</head>
<body>
	
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">New Issue</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">New Issue</h1>
				<div class="panel panel-default">
						<div class="panel-heading clearfix">Please Input The Data</div>
						<div class="panel-body">
							
							<%= form_for @issue, url: project_issue_index_path, method: :post do |i| %>
						
								<div class="form-group">
									<%= i.text_field :code, class: 'form-control', readonly: '' %>
								</div>	
								<div class="form-group">
									<%= i.label :Name%>
									<%= i.text_field :title, class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= i.label :Description %>
									<%= i.text_area :description, class: 'form-control' %>
								</div>
								(Optional)
								<div class="form-group">
									<%= i.label :Created %>
									<%= i.text_field :created, value: Time.now.strftime('%d-%m-%Y'), class: 'form-control', readonly: '' %>
								</div>
								<div class="form-group">
									<%= i.label :Project %>
									<%= i.hidden_field :project_id, value: @project.id, class: 'form-control' %>
								</div>

								<div class="form-group">
									<%= i.submit "Create", class: 'btn btn-primary' %>
								</div>	
									
							<% end %>
						</div>
					</div>
			</div>
		</div><!--/.row-->

		<div class="row">
			
		</div>
	</div>
			
</body>
</html>
