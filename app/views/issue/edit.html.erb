    <!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= render 'layouts/navbar' %></br>
    <%= render 'layouts/sidebar1' %></br>

	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">issue  / <%=@issue.title %> / Edit </li>
			</ol>
		</div><!--/.row-->
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						Info The Project		
						<span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span></div>
					<div class="panel-body">
						<div class="canvas-wrapper">
							<%= form_for @issue, url: project_issue_path, method: :patch do |i| %>

								<div class="form-group">
									<%= i.label :Name_issue %>
									<%= i.text_field :title, class: 'form-control', required: '' %>
								</div>
								<div class="form-group">
									<%= i.label :Description %>
									<%= i.text_field :description, class: 'form-control', required: '' %>
								</div>
								<div class="form-group">
									<%= i.label :Status %>
									<%= i.select(:status, [['Open', 'open'], ['In Progres', 'in_progres'],['To Be Tested','to_be_tested'],['Close','closed']]) %>
								</div>								
								<div class="form-group">
									<%= i.hidden_field :project_id, class: 'form-control' %>
								</div>								
								<div class="form-group">
									<%= i.submit class: 'btn btn-primary' %> 
								</div>							
							<%end%>
						</div>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div>	<!--/.main-->
	  

</body>
</html>
